<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/spacing_xxl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:id="@+id/profileHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg"
            android:gravity="center_horizontal">

            <!-- Avatar -->
            <FrameLayout
                android:layout_width="@dimen/avatar_xl"
                android:layout_height="@dimen/avatar_xl">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_avatar" />

                <ImageView
                    android:layout_width="@dimen/avatar_md"
                    android:layout_height="@dimen/avatar_md"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_kiran_logo"
                    android:contentDescription="Profile" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="Kiran User"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_headline"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxs"
                android:text="kiran@example.com"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body" />

        </LinearLayout>

        <!-- Stats Row -->
        <LinearLayout
            android:id="@+id/statsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_sm">

            <!-- Scans -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_xxs"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="156"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scans"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_caption" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Products -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/spacing_xxs"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Products"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_caption" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Accuracy -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xxs"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="94%"
                        android:textColor="@color/success"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accuracy"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_caption" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Menu Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="Settings"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_title"
            android:textStyle="bold" />

        <!-- Dark Mode Toggle -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="@color/background_card"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:id="@+id/darkModeIcon"
                    android:layout_width="@dimen/icon_lg"
                    android:layout_height="@dimen/icon_lg"
                    android:src="@android:drawable/ic_menu_day"
                    app:tint="@color/text_primary"
                    android:contentDescription="Dark Mode" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:text="Dark Mode"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/darkModeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:useMaterialThemeColors="true" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Menu Items -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuSkuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="@color/background_card"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border_light"
            app:rippleColor="@color/ripple_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_lg"
                    android:layout_height="@dimen/icon_lg"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:tint="@color/text_primary"
                    android:contentDescription="SKU List" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:text="SKU List (Onboarded Items)"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body" />

                <ImageView
                    android:layout_width="@dimen/icon_sm"
                    android:layout_height="@dimen/icon_sm"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/text_tertiary"
                    android:contentDescription="Go" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuPerformance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/background_card"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border_light"
            app:rippleColor="@color/ripple_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_lg"
                    android:layout_height="@dimen/icon_lg"
                    android:src="@android:drawable/ic_menu_compass"
                    app:tint="@color/text_primary"
                    android:contentDescription="Performance" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:text="Performance Monitor"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body" />

                <ImageView
                    android:layout_width="@dimen/icon_sm"
                    android:layout_height="@dimen/icon_sm"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/text_tertiary"
                    android:contentDescription="Go" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/background_card"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border_light"
            app:rippleColor="@color/ripple_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_lg"
                    android:layout_height="@dimen/icon_lg"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="@color/text_primary"
                    android:contentDescription="Logs" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:text="App Logs"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body" />

                <ImageView
                    android:layout_width="@dimen/icon_sm"
                    android:layout_height="@dimen/icon_sm"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/text_tertiary"
                    android:contentDescription="Go" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/background_card"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border_light"
            app:rippleColor="@color/ripple_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_lg"
                    android:layout_height="@dimen/icon_lg"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="@color/text_primary"
                    android:contentDescription="About" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:text="About Kiran"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body" />

                <ImageView
                    android:layout_width="@dimen/icon_sm"
                    android:layout_height="@dimen/icon_sm"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/text_tertiary"
                    android:contentDescription="Go" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Version Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xxl"
            android:gravity="center"
            android:text="Kiran v1.0.0"
            android:textColor="@color/text_tertiary"
            android:textSize="@dimen/text_caption" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
