<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Full-screen theme with no action bar - Kiran Brand -->
    <style name="Theme.CameraApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/kiran_secondary</item>
        <item name="colorPrimaryVariant">@color/kiran_secondary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/kiran_accent</item>
        <item name="colorSecondaryVariant">@color/kiran_accent_light</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Status & Navigation Bars -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Remove Fullscreen for proper status bar -->
        <item name="android:windowFullscreen">false</item>
        
        <!-- Material Components -->
        <item name="bottomNavigationStyle">@style/Widget.Kiran.BottomNavigation</item>
        <item name="materialCardViewStyle">@style/Widget.Kiran.CardView</item>
        <item name="materialButtonStyle">@style/Widget.Kiran.Button</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.Kiran.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemActiveIndicatorStyle">@null</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.Kiran.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">@dimen/radius_md</item>
        <item name="cardElevation">@dimen/elevation_sm</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.Kiran.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/kiran_secondary</item>
        <item name="cornerRadius">@dimen/radius_sm</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Widget.Kiran.Button.Accent" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/kiran_accent</item>
        <item name="cornerRadius">@dimen/radius_sm</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Widget.Kiran.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/border</item>
        <item name="cornerRadius">@dimen/radius_sm</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Widget.Kiran.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/kiran_secondary</item>
    </style>
    
    <!-- Add to Cart Button (Blinkit-style) -->
    <style name="Widget.Kiran.AddButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/bg_add_button</item>
        <item name="android:textColor">@color/kiran_accent</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/add_button_size</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.Kiran.Display" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Kiran.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Kiran.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Kiran.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>
    
    <style name="TextAppearance.Kiran.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>
    
    <style name="TextAppearance.Kiran.Price" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Kiran.Price.Strikethrough">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>
</resources>
